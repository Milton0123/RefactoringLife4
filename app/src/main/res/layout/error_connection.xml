<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_dog_error_connection"
        android:layout_width="246dp"
        android:layout_height="316dp"
        android:background="@drawable/error_dog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tex_error_connection"
        android:layout_width="282dp"
        android:layout_height="51dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/comforta_w_400"
        android:text="@string/error_de_conexion"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_dog_error_connection"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_error_change"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/image_change"
        app:layout_constraintBottom_toTopOf="@+id/tv_tex_error_connection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_dog_error_connection"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
